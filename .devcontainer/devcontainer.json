{
  "name": "Odontological Web Application",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "17"
    }
  },
  "remoteUser": "root",
  "forwardPorts": [3344],
  "portsAttributes": {
    "3344": {
      "label": "App Server",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "service postgresql start 2>/dev/null || pg_ctlcluster $(ls /etc/postgresql | head -1) main start 2>/dev/null || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
